@model ShoppingCart.Models.Cart

@{
    ViewData["Title"] = "Details";
}

<h1 class="text-info">Details</h1>

<div>
    <hr />
    <dl class="row text-info">
        <dt class="col-sm-2">
            @*@Html.DisplayNameFor(model => model.ProductName)*@
            Product Name
        </dt>
        <dd class="col-sm-10 text-info">
            @Html.DisplayFor(model => model.Product.ProductName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.Category)
        </dt>
        <dd class="col-sm-10 text-info">
            @Html.DisplayFor(model => model.Product.Category)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.Price)
        </dt>
        <dd class="col-sm-10 text-info">
            @Html.DisplayFor(model => model.Product.Price)
        </dd>
        <dt class="col-sm-2 text-info">
            @Html.DisplayNameFor(model => model.Quantity)
        </dt>
        <dd class="col-sm-10">
            @using (Html.BeginForm("Update", "Cart", FormMethod.Post))
            {
                <input type="hidden" name="id" id="id" value="@Model.CartID" />
                <input type="number" name="quantity" id="quantity" value="@Model.Quantity" />
                <input type="submit" value="Update" />
            }
            @*@Html.DisplayFor(model => model.Quantity)*@
        </dd>
        <dt class="col-sm-2 text-info">
            @Html.DisplayNameFor(model => model.Paid)
        </dt>
        <dd class="col-sm-10 text-info">
            @Html.DisplayFor(model => model.Paid)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.Description)
        </dt>
        <dd class="col-sm-10 text-info">
            @Html.DisplayFor(model => model.Product.Description)
        </dd>
        <dt class="col-sm-2">
            @*@Html.DisplayNameFor(model => model.Product.ImgUrl)*@
            Image
        </dt>
        <dd class="col-sm-10 text-info">
            @Html.DisplayFor(model => model.Product.ImgUrl)
        </dd>

    </dl>
</div>

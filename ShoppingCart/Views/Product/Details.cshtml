@model ShoppingCart.Models.Product

@{
    ViewData["Title"] = "Details";
}

<h1 class="text-info">Details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2 text-info">
            @Html.DisplayNameFor(model => model.ProductName)
        </dt>
        <dd class="col-sm-10 text-info">
            @Html.DisplayFor(model => model.ProductName)
        </dd>
        @if (User.Identity.IsAuthenticated)
        {
            <dt class="col-sm-2 text-info">
                @Html.DisplayNameFor(model => model.Price)
            </dt>
            <dd class="col-sm-10 text-info">
                @Html.DisplayFor(model => model.Price)
            </dd>
        }
        <dt class="col-sm-2 text-info">
            @Html.DisplayNameFor(model => model.Category)
        </dt>
        <dd class="col-sm-10 text-info">
            @Html.DisplayFor(model => model.Category)
        </dd>
        <dt class="col-sm-2 text-info">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10 text-info">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2 text-info">
            @Html.DisplayNameFor(model => model.ImgUrl)
        </dt>
        <dd class="col-sm-10 text-info">
            <img src="~/@Model.ImgUrl" height="300" width="200" />
        </dd>
    </dl>
</div>
<div>
    @if (User.IsInRole("Admin"))
    {
        <a asp-action="Edit" asp-route-id="@Model?.ProductID">Edit</a>
        <span> | </span>
    }
    <a asp-action="Index">Back to List</a>
</div>
